<%- include header %>
<% posts.forEach(function (post, index) { %>
<div class="post-content">
	<div class="ui grid">
		<div class="four wide column"></div>
		<div class="eight wide column">
			<div class="ui segment">
				<h3><a href=""><%= post.title %></a></h3>
				<p class="info">
					作者：<%= post.name %></a> |
					日期：<%= post.time.minute %>
				</p>
				<p><%= post.post %></p>
			</div>
		</div>
	</div>
</div>
<% }) %>
<%- include footer %>